{% doc %}
  @prompt
    Build a section for displaying products. There is a block that display product's image on left side and details on right side with text, description and button "View More". Below is a list of product. Whenever user clicks to a product, its content will display in the details block above
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-product-showcase__container-{{ ai_gen_id }} {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .ai-product-showcase__featured-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    margin-bottom: {{ block.settings.list_spacing }}px;
    background-color: {{ block.settings.featured_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-product-showcase__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .ai-product-showcase__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-showcase__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-showcase__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-showcase__details-{{ ai_gen_id }} {
    padding: {{ block.settings.details_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-product-showcase__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.element_spacing }}px;
    line-height: 1.2;
  }

  .ai-product-showcase__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-product-showcase__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin-bottom: {{ block.settings.element_spacing }}px;
  }

  .ai-product-showcase__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 30px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-align: center;
    border: 2px solid {{ block.settings.button_bg_color }};
  }

  .ai-product-showcase__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg }};
    color: {{ block.settings.button_hover_text }};
    border-color: {{ block.settings.button_hover_bg }};
  }

  .ai-product-showcase__list-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-product-showcase__list-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_bg_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .ai-product-showcase__list-item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-product-showcase__list-item-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.active_border_color }};
  }

  .ai-product-showcase__list-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .ai-product-showcase__list-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-showcase__list-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-showcase__list-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-product-showcase__list-info-{{ ai_gen_id }} {
    padding: {{ block.settings.item_padding }}px;
  }

  .ai-product-showcase__list-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.item_title_color }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-product-showcase__list-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_price_size }}px;
    font-weight: 600;
    color: {{ block.settings.item_price_color }};
  }

  @media screen and (max-width: 1024px) {
    .ai-product-showcase__list-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 767px) {
    .ai-product-showcase__featured-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-product-showcase__details-{{ ai_gen_id }} {
      padding: {{ block.settings.details_padding | times: 0.7 }}px;
    }

    .ai-product-showcase__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-showcase__list-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }
{% endstyle %}

<product-showcase-{{ ai_gen_id }}
  class="ai-product-showcase-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-product-showcase__container-{{ ai_gen_id }}">
    <div class="ai-product-showcase__featured-{{ ai_gen_id }}">
      <div class="ai-product-showcase__image-wrapper-{{ ai_gen_id }}">
        <div class="ai-product-showcase__featured-image" data-featured-image>
          {% if block.settings.product_1 %}
            {% if block.settings.product_1.featured_image %}
              <img
                src="{{ block.settings.product_1.featured_image | image_url: width: 800 }}"
                alt="{{ block.settings.product_1.featured_image.alt | escape }}"
                class="ai-product-showcase__image-{{ ai_gen_id }}"
                loading="lazy"
                width="800"
                height="800"
              >
            {% else %}
              <div class="ai-product-showcase__image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          {% else %}
            <div class="ai-product-showcase__image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="ai-product-showcase__details-{{ ai_gen_id }}">
        <div class="ai-product-showcase__featured-content" data-featured-content>
          {% if block.settings.product_1 %}
            <h2 class="ai-product-showcase__title-{{ ai_gen_id }}">
              {{ block.settings.product_1.title }}
            </h2>
            <div class="ai-product-showcase__price-{{ ai_gen_id }}">
              {{ block.settings.product_1.price | money }}
            </div>
            {% if block.settings.product_1.description != blank %}
              <div class="ai-product-showcase__description-{{ ai_gen_id }}">
                {{ block.settings.product_1.description | strip_html | truncate: 200 }}
              </div>
            {% endif %}
            <a
              href="{{ block.settings.product_1.url }}"
              class="ai-product-showcase__button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% else %}
            <h2 class="ai-product-showcase__title-{{ ai_gen_id }}">
              Select a product
            </h2>
            <div class="ai-product-showcase__description-{{ ai_gen_id }}">
              Choose products below to display their details here
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="ai-product-showcase__list-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}

        {% if product != blank %}
          <div
            class="ai-product-showcase__list-item-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
            data-product-item
            data-product-index="{{ i }}"
            data-product-title="{{ product.title | escape }}"
            data-product-price="{{ product.price | money }}"
            data-product-description="{{ product.description | strip_html | truncate: 200 | escape }}"
            data-product-url="{{ product.url }}"
            data-product-image="{% if product.featured_image %}{{ product.featured_image | image_url: width: 800 }}{% endif %}"
          >
            <div class="ai-product-showcase__list-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-showcase__list-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              {% else %}
                <div class="ai-product-showcase__list-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-product-showcase__list-info-{{ ai_gen_id }}">
              <h3 class="ai-product-showcase__list-title-{{ ai_gen_id }}">
                {{ product.title }}
              </h3>
              <div class="ai-product-showcase__list-price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</product-showcase-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductShowcase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.featuredImage = this.querySelector('[data-featured-image]');
        this.featuredContent = this.querySelector('[data-featured-content]');
        this.productItems = this.querySelectorAll('[data-product-item]');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.productItems.forEach((item) => {
          item.addEventListener('click', () => {
            this.updateFeaturedProduct(item);
          });
        });
      }

      updateFeaturedProduct(item) {
        this.productItems.forEach((el) => el.classList.remove('active'));
        item.classList.add('active');

        const title = item.dataset.productTitle;
        const price = item.dataset.productPrice;
        const description = item.dataset.productDescription;
        const url = item.dataset.productUrl;
        const imageUrl = item.dataset.productImage;

        const imageHTML = imageUrl
          ? `<img src="${imageUrl}" alt="${title}" class="ai-product-showcase__image-{{ ai_gen_id }}" loading="lazy" width="800" height="800">`
          : `<div class="ai-product-showcase__image-placeholder-{{ ai_gen_id }}">${this.getPlaceholderSVG()}</div>`;

        this.featuredImage.innerHTML = imageHTML;

        const descriptionHTML = description
          ? `<div class="ai-product-showcase__description-{{ ai_gen_id }}">${description}</div>`
          : '';

        this.featuredContent.innerHTML = `
          <h2 class="ai-product-showcase__title-{{ ai_gen_id }}">${title}</h2>
          <div class="ai-product-showcase__price-{{ ai_gen_id }}">${price}</div>
          ${descriptionHTML}
          <a href="${url}" class="ai-product-showcase__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        `;
      }

      getPlaceholderSVG() {
        return `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 525.5 525.5"><path d="M324.5 212.7H203c-1.6 0-2.8 1.3-2.8 2.8V308c0 1.6 1.3 2.8 2.8 2.8h121.6c1.6 0 2.8-1.3 2.8-2.8v-92.5c0-1.6-1.3-2.8-2.9-2.8zm1.1 95.3c0 .6-.5 1.1-1.1 1.1H203c-.6 0-1.1-.5-1.1-1.1v-92.5c0-.6.5-1.1 1.1-1.1h121.6c.6 0 1.1.5 1.1 1.1V308z"></path><path d="M210.4 299.5H240v.1s.1 0 .2-.1h75.2v-76.2h-105v76.2zm1.8-7.2l20-24c1.6-1.9 4.3-2.1 6.2-.6l12.6 10.3c1.7 1.4 4.2 1.2 5.7-.3l19.7-19.6c1.6-1.6 4.1-1.6 5.7 0l14.1 14.1v20.1h-84v-.1l-.1.1.1-.1v-20.1l14.3-14.2c1.6-1.6 4.1-1.6 5.7 0l9.9 9.8v12.5c0 1.5 1.3 2.8 2.8 2.8s2.8-1.3 2.8-2.8v-7.9l-5.4-5.4-20-24z"></path><circle cx="219.3" cy="231.5" r="8.1"></circle><path d="M210.4 223.4c-4.5 0-8.1 3.6-8.1 8.1s3.6 8.1 8.1 8.1 8.1-3.6 8.1-8.1-3.6-8.1-8.1-8.1zm0 14.4c-3.5 0-6.3-2.8-6.3-6.3s2.8-6.3 6.3-6.3 6.3 2.8 6.3 6.3-2.8 6.3-6.3 6.3z"></path></svg>`;
      }
    }

    customElements.define('product-showcase-{{ ai_gen_id }}', ProductShowcase{{ ai_gen_id }});
  })();
</script>

