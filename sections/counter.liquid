{% render 'section-style' %}
{{ 'counter.css' | asset_url | stylesheet_tag }}
{%- assign id = '#shopify-section-' | append: section.id -%}

{% style %}

{{ id }} {
      {%- if section.settings.background_repeat -%}
        background-repeat: repeat;
      {%- else -%}
        background-repeat: no-repeat;
      {%- endif -%}
      {%- if section.settings.background_size != "default" and section.settings.background_size != "custom" -%}
        background-size: {{ section.settings.background_size }};
      {%- endif -%}
      {%- if section.settings.background_size == "custom" -%}
        background-size: {{ section.settings.background_size_custom }}%;
      {%- endif -%}
      {%- if section.settings.background_position != "custom" -%}
        background-position: {{ section.settings.background_position }};
      {%- else -%}
        background-position-x: {{ section.settings.background_position_x }};
        background-position-y: {{ section.settings.background_position_y }};
      {%- endif -%}
    }

    {%- for block in section.blocks -%}
      #block-{{ block.id }} {
        border-width: {{ block.settings.border_width }};
        border-style: solid;
        border-color: {{ block.settings.border_color }};
      }
      #block-{{ block.id }} .content {
        padding: {{ block.settings.padding_desktop_content }};
      }
      @media (max-width: 1199px) {
        #block-{{ block.id }} .content {
            padding: {{ block.settings.padding_tablet_content }};
        }
      }
      @media (max-width: 767px) {
        #block-{{ block.id }} .content {
            padding: {{ block.settings.padding_mobile_content }};
        }
      }
      @media (max-width: 575px) {
        #block-{{ block.id }} {
            border: none;
        }
      }
    {%- endfor -%}

{% endstyle %}

<div class="counter-section">
  <div class="shopify-container">   
    {% render 'section-header' %} 
      <div class="row">
          {%- for block in section.blocks -%}
              <div id="block-{{ block.id }}" class="col">
                  <div class="content" data-count="{{ block.settings.counter_item_number }}" {% if block.settings.data_aos !="none" %}
                    data-aos="{{ block.settings.data_aos }}"
                    {% endif %}>
                      {%- if block.settings.counter_item_image != blank -%}
                          <div class="counter-item__icon">
                              {{ block.settings.counter_item_image |  image_url: width: block.settings.counter_item_image.width |  image_tag }}
                          </div>
                      {%- endif -%}
                          
                          <div class="counter-item__content">
                              <div class="counter-item__number" style="color: {{ block.settings.counter_item_number_color }}">
                                  <span>{{ block.settings.counter_item_label }}</span><span class="counter">0</span> {{ block.settings.counter_item_label_after }}
                              </div>
                              <div class="counter-item__title" style="color: {{ block.settings.counter_item_label_color }}">{{ block.settings.counter_item_title }}</div>

                              {%- if block.settings.counter_item_content != blank -%}
                                <div class="counter-item__description" style="color: {{ block.settings.counter_item_content_color }}">{{ block.settings.counter_item_content }}</div>
                              {%- endif -%}
                              
                          </div>
                      
                  </div>
              </div>
          {%- endfor -%}
      </div>
  </div>
</div>

{% comment %} <script>
       document.addEventListener("DOMContentLoaded", function() {
      const counterElements = document.querySelectorAll('.content');
      const countedElements = new Set(); 
      let isCounting = false;
      
      function startCounting(element, countValue, duration) {
    const increment = Math.ceil(countValue / (duration / 10));
    let count = 0;
    const interval = setInterval(function() {
      count += increment;
      if (count >= countValue) {
        clearInterval(interval);
        count = countValue;
        isCounting = false;
      }
      element.querySelector('.counter').textContent = count;
    },(duration/countValue));
      }
      
      function handleScroll() {
    if (!isCounting) {
      counterElements.forEach(function(element) {
        if (!countedElements.has(element) && isElementInViewport(element)) {
          const countValue = parseInt(element.getAttribute('data-count'));
          const duration = Math.min(3000, countValue * 10);
          isCounting = true;
          startCounting(element, countValue, duration);
          countedElements.add(element);
        }
      });
    }
      }
      
      function isElementInViewport(el) {
    const rect = el.getBoundingClientRect();
    return (
      rect.top >= 0 &&
      rect.left >= 0 &&
      rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
      rect.right <= (window.innerWidth || document.documentElement.clientWidth)
    );
      }
      
      
      handleScroll();
      
       
      window.addEventListener('scroll', handleScroll);
      });
</script> {% endcomment %}

