{{ 'price-section.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

{%- assign id = '#shopify-section-' | append: section.id -%}

{%- style -%}

  {{ id }} {
    {%- if section.settings.background_repeat -%}
      background-repeat: repeat;
    {%- else -%}
      background-repeat: no-repeat;
    {%- endif -%}
    {%- if section.settings.background_size != "default" and section.settings.background_size != "custom" -%}
      background-size: {{ section.settings.background_size }};
    {%- endif -%}
    {%- if section.settings.background_size == "custom" -%}
      background-size: {{ section.settings.background_size_custom }}%;
    {%- endif -%}
    {%- if section.settings.background_position != "custom" -%}
      background-position: {{ section.settings.background_position }};
    {%- else -%}
      background-position-x: {{ section.settings.background_position_x }};
      background-position-y: {{ section.settings.background_position_y }};
    {%- endif -%}
  }

  {{ id }}
  .card__item {
    --bg-color: {{ section.settings.card_bg_color }};
    --bg-color-hover: {{ section.settings.card_bg_color_hover }};
    --heading-color: {{ section.settings.card_heading_color }};
    --text-color: {{ section.settings.text_color }};
    --price-color: {{ section.settings.price_color }};
    --btn-color: {{ section.settings.card_btn_color }};
    --btn-color-hover: {{ section.settings.card_btn_color_hover }};
    --btn-bg-color: {{ section.settings.card_btn_bg_color }};
    --btn-bg-color-hover: {{ section.settings.card_btn_bg_color_hover }};
    padding: {{ section.settings.card_padding_desktop }};
    border-radius: {{ section.settings.card_rounded |  append: 'px' }};
  }

  @media (max-width: 1199px) {
    {{ id }}
    .card__item {
      padding: {{ section.settings.card_padding_tablet }};
    }
  }

  @media (max-width: 767px) {
    {{ id }}
    .card__item {
      padding: {{ section.settings.card_padding_mobile }};
    }
  }

{%- endstyle -%}


<div class="our__pricing">
  <div class="shopify-container">
    {%- render 'section-header' -%}


    {%- if section.settings.enable_tab -%}
      <div class="tab__wrapper">
        {%- if section.settings.tab_nav_position != 'header' -%}
          <div class="tab__nav">
            {% for i in (1..section.settings.tab_limit) %}
              {%- liquid
                if i == 1
                  assign tab_name = section.settings.tab_name_1
                elsif i == 2
                  assign tab_name = section.settings.tab_name_2
                elsif i == 3
                  assign tab_name = section.settings.tab_name_3
                elsif i == 4
                  assign tab_name = section.settings.tab_name_4
                endif
              -%}
              {%- if tab_name -%}
                <div class="tab__link {% if forloop.first %}active{% endif %}" data-tab="{{ section.id }}-{{ i }}">
                  <span class="checked"></span>
                  {{ tab_name }}</div>


              {%- endif -%}
            {% endfor %}

          </div>
        {%- endif -%}

        <div class="tab__contents">
          {% for i in (1..section.settings.tab_limit) %}
            <div class="tab__item--content {% if forloop.first %}active{% endif %}" id="{{ section.id }}-{{ i }}">
              <div class="row">
                {% for block in section.blocks %}
                  {% if block.settings.tab_id == i %}
                    <div id="block-{{ block.id }}" class="col" {% if section.settings.data_aos_card !="none" and i == 1 %} 
                        data-aos="{{ section.settings.data_aos_card }}" {% endif %}>
                      <div class="card__item" >
                        <div class="card__top">
                          {%- if block.settings.card_title != blank -%}
                            <h5 class="card__title">{{ block.settings.card_title }}</h5>
                          {%- endif -%}
                          {%- if block.settings.card_label != blank -%}
                            <span class="card__label">{{ block.settings.card_label }}</span>
                          {%- endif -%}
                        </div>
                        {%- if block.settings.card_des != blank -%}
                          <div class="card__description">
                            {{ block.settings.card_des }}
                          </div>
                        {%- endif -%}
                        {%- if block.settings.card_feature_label != blank and block.settings.feature != blank -%}
                          <div class="card__feature">
                            {%- if block.settings.card_feature_label != blank -%}
                              <p class="card__feature--label">{{ block.settings.card_feature_label }}</p>
                            {%- endif -%}
                            {%- if block.settings.feature != blank -%}
                              <div class="card__feature--content">
                                {{ block.settings.feature }}
                              </div>
                            {%- endif -%}
                          </div>
                        {%- endif -%}
                        <div class="card__bottom">
                          {%- if block.settings.price != blank -%}
                            <div class="card__price">
                              <h2>{{ block.settings.price }}</h2>
                              {%- if block.settings.timer != blank -%}
                                <p>{{ block.settings.timer }}</p>
                              {%- endif -%}
                            </div>
                          {%- endif -%}

                          {%- if block.settings.button_text != blank -%}
                            <a class="card__button" href="{{ block.settings.button_url | default: "#" }}">
                              {{ block.settings.button_text }}
                            </a>
                          {%- endif -%}
                        </div>

                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>


    {%- else -%}

      <div class="row">
        {% for block in section.blocks %}
          <div id="block-{{ block.id }}" class="col">
            <div class="card__item">
              <div class="card__top">
                {%- if block.settings.card_title != blank -%}
                  <h5 class="card__title">{{ block.settings.card_title }}</h5>
                {%- endif -%}
                {%- if block.settings.card_label != blank -%}
                  <span class="card__label">{{ block.settings.card_label }}</span>
                {%- endif -%}
              </div>
              {%- if block.settings.card_des != blank -%}
                <div class="card__description">
                  {{ block.settings.card_des }}
                </div>
              {%- endif -%}
              {%- if block.settings.card_feature_label != blank and block.settings.feature != blank -%}
                <div class="card__feature">
                  {%- if block.settings.card_feature_label != blank -%}
                    <p class="card__feature--label">{{ block.settings.card_feature_label }}</p>
                  {%- endif -%}
                  {%- if block.settings.feature != blank -%}
                    <div class="card__feature--content">
                      {{ block.settings.feature }}
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
              <div class="card__bottom">
                {%- if block.settings.price != blank -%}
                  <div class="card__price">
                    <h2>{{ block.settings.price }}</h2>
                    {%- if block.settings.timer != blank -%}
                      <p>{{ block.settings.timer }}</p>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                {%- if block.settings.button_text != blank -%}
                  <a class="card__button" href="{{ block.settings.button_url | default: "#" }}">
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>

            </div>
          </div>
        {% endfor %}
      </div>


    {%- endif -%}


  </div>
</div>


