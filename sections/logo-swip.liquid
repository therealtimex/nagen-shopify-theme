{% render 'section-style' %}

<style>

.logoswip-item {
  position: relative;
}
.logoswip-item img {
  transform: scale(1);
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 1;

  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: auto;
}
.logoswip-item:hover img {
  transform: scale(1.1);
  opacity: 1;
}
{% if section.settings.padding_inner != blank %}
.section-{{ section.id }} .swiper-slide {
  padding: {{ section.settings.padding_inner }};
  border: 1px solid rgb(var(--border-color));
  border-radius: 20px;
}
{% endif %}

</style>
  
<section class="section-{{ section.id }} section-logo-swip">
  <div class="{{ section.settings.setwidthout }}">

    <div {% if section.settings.arrow_heading %}style="gap: 15px 0;"{% endif %} class="{% if section.settings.arrow_heading %}d-flex flex-wrap flex-md-row flex-column align-items-center mb-5 {% else %} section__header-wp{% endif %}">
            
      {% render 'section-heading' %}

      {% if section.settings.arrow_heading %}
        <div style="gap: 10px;" class="d-flex position-relative justify-content-md-end justify-content-center arrow-heading">
          <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
            {% render 'icon-arrow-prev' %}
          </button>
          <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
            {% render 'icon-arrow-next' %}
          </button>
        </div>
      {% endif %}
    
    </div>

    <div data-swiper-id="{{ section.id }}" class="ap-swiper mySwiper swiper-container" data-swiper='{
        "spaceBetween": 15,
        "slidesPerView": 1,  
        "breakpoints":{
          "360": {
            "slidesPerView": 2,
            "spaceBetween": 15
          },
          "768":{
            "slidesPerView": 4,
            "spaceBetween": {{ section.settings.spaceBetween }}
          },
          "1200":{
            "slidesPerView": {{ section.settings.perviewDesktop }},
            "spaceBetween": {{ section.settings.spaceBetween }}
          }
        }
      }'>
      <div class="swiper-wrapper">
        {% for block in section.blocks %}     
            {% if block.settings.image != blank %}
                <div class="swiper-slide">
                    <a style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;" href="{{ block.settings.link_logo | default: '#' }}" class="d-block logoswip-item">
                      {% assign img_url = block.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                      <img class="ap-logolist__image"
                        src="{{ block.settings.image | image_url: block.settings.image.width }}" 
                        data-srcset="{{ img_url }}" 
                        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-src="{{ img_url }}" 
                        data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ block.settings.image.alt }}" 
                        loading="lazy"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.height }}">
                    </a>
                </div>
            {% else %}
                <div class="swiper-slide">
                    <div class="logoswip-item">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
      </div>

      {% if section.settings.dots %}
        <div class="swiper-pagination"></div>
      {% endif %}

      {% if section.settings.arrow_heading != true %}
        {% if section.settings.arrows %}
          <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
            {% render 'icon-arrow-prev' %}
          </button>
          <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
            {% render 'icon-arrow-next' %}
          </button>
        {% endif %}
      {% endif %}

    </div>
  </div>
</section>     
  
