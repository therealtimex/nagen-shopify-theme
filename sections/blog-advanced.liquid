{% render 'section-style' %}
{{ 'featured-blog.css' | asset_url | stylesheet_tag }}
{%- assign id = '#shopify-section-' | append: section.id -%}

{% style %}




{%- for block in section.blocks -%}
  {%- unless block.settings.enable_swiper -%}
  #block-{{ block.id }} .swiper-wrapper {
    height: unset;
  }
  #block-{{ block.id }} .blog-wrapper  {
    display: grid;
    grid-template-columns: repeat({{ block.settings.desktop_item }}, 1fr);
    gap: {{ block.settings.space_desktop |  append: 'px' }};
  }

  @media (max-width: 1199px) {
    #block-{{ block.id }} .blog-wrapper  {
      grid-template-columns: repeat({{ block.settings.tablet_item }}, 1fr);
    }
  }
  @media (max-width: 767px) {
    #block-{{ block.id }} .blog-wrapper  {
      gap: {{ block.settings.space |  append: 'px' }};
    }
  }
{%- endunless -%}
{%- endfor -%}

{% endstyle %}

<div class="blog-section">
  <div class="shopify-container">
    {% render 'section-header' %}
    <div class="row">
      {%- for block in section.blocks -%}
        <div id="block-{{ block.id }}"
        class="col" {% if block.settings.blog_data_aos != 'none' %}
          data-aos="{{ block.settings.blog_data_aos }}"
        {% endif %}>


        {%- if block.settings.enable_swiper -%}
          <div class="blog-swiper">
            <ap-blogcarousel stagger-apparition="" class="ap-blogcarousel ap-blogcarousel--center ap-object-loaded">
              <div
                id="swiper-{{ block.id }}"
                class="{%  if block.settings.enable_swiper %} ap-swiper {% endif %}  swiper"
                data-desktop-item="{{ block.settings.desktop_item }}"
                data-laptop-item="{{ block.settings.laptop_item }}"
                data-tablet-item="{{ block.settings.tablet_item }}"
                data-tabletsmall-item="{{ block.settings.tablet_small_item }}"
                data-mobile-item="{{ block.settings.mobile_item }}"
                data-loop="{{ block.settings.loop }}"
                data-rows="{{ block.settings.rows }}"
                data-direction="{{ block.settings.direction }}"
                data-navigation="{{ block.settings.navigation }}"
                data-pagination="{{ block.settings.pagination }}"
                data-space="{{ block.settings.space }}"
                data-space-desktop="{{ block.settings.space_desktop }}"
                data-time="{{ block.settings.time }}">
                <div class="blog-wrapper {%  if block.settings.enable_swiper %} swiper-wrapper {% endif %}">

                  {%- if block.settings.blog != blank and block.settings.blog.articles_count > 0 -%}
                    
                    {% liquid
                      assign limit = block.settings.limit
          
                      for article in block.settings.blog.articles limit: limit
                        echo '<div class="swiper-slide" >'
                        render 'blog-grid', section: block, article: article, data_aos: block.settings.blog_data_aos, item_style: block.settings.blog_item_style
                        echo '</div>'
                      endfor
                    %}
                  {%- else -%}

                    {%- assign limit = block.setting.limit -%}
                    {% for i in (1..limit) %}
                      <div class="swiper-slide {% if block.settings.rows > 1 %} h-unset{% endif %}">
                        <div class="blog-placeholder">
                          <div class="placeholder media media--landscape">
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                          </div>
                          <div class="blog-placeholder__content">
                            <h2>
                              {{ 'sections.featured_blog.onboarding_title' | t }}
                            </h2>
                            <p class="rte-width">
                              {{ 'sections.featured_blog.onboarding_content' | t }}
                            </p>
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                  {%- endif -%}

                </div>

                {% if block.settings.navigation %}
                  <div class="swiper-arrow">
                    <div class="swiper-button-prev swiper-button-prev_{{ block.id }}">
                    </div>
                    <div class="swiper-button-next swiper-button-next_{{ block.id }}">
                    </div>
                  </div>
                {% endif %}

                {% if block.settings.pagination %}
                  <div class="swiper-pagination swiper-pagination_{{ block.id }}"></div>
                {% endif %}

              </div>
            </ap-blogcarousel>
        </div>


        {%- else -%}
          <div class="blog-wrapper no-swiper ">
            {% liquid
                      assign limit = block.settings.limit
          
                      for article in block.settings.blog.articles limit: limit
                        
                        render 'blog-grid', section: block, article: article, data_aos: block.settings.blog_data_aos, item_style: block.settings.blog_item_style
                        
                      endfor
                    %}
          </div>

        {%- endif -%}



          
        </div>
      {%- endfor -%}
    </div>
    
  </div>
</div>

