                <span class="popover__overlay"></span>
                <header class="popover__header">
                  {%- if section.settings.share_label != blank -%}
                    <span class="popover__title heading h6">{{ section.settings.share_label }}</span>
                  {%- endif -%}
                  <button type="button" class="popover__close-button tap-area tap-area--large" data-action="close" title="Close">
