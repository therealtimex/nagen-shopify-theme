<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
    .main-page-title {
      margin-bottom: 8px;
    }
  
    .title-page-content {
      color: #000;
      font-size: 2rem;
      text-align: center;
    }
  
    
      .section-{{ section.id }}-padding {
        margin: {{ section.settings.margin_desktop }};
      }
      .breadcrumb__list {
        padding: 0;
      }
      .breadcrumb__link ,
      .breadcrumb__item+.breadcrumb__item:before {
        color: {{ section.settings.color_breadcrumb }};
      }
      .section-{{ section.id }}-padding .breadcrumb-wp {
        padding-top: {{ section.settings.padding_top | times: 1 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 1 | round: 0 }}px;
        {% if section.settings.bg_img != blank %}
          background-image: url({{ section.settings.bg_img | image_url: width: 2000 }});
          background-repeat: no-repeat;
          background-size: cover;
          background-position: center;
        {% endif %}
        min-height: {{ section.settings.height }}px;
        border-radius: 0;
        text-align: center;
        {% if section.settings.background_gradient != blank %} 
          background-image: {{ section.settings.background_gradient }};
          {% endif %}
        {% if section.settings.background_color != blank %}
          background-color: {{ section.settings.background_color }};
        {% endif %}

        
      }
      .main-content-page {
        padding-bottom: 60px;
      }
      .breadcrumb-wp {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
    
  
  {%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="{{ section.settings.setwidthout }}">
    <div class="breadcrumb-wp">
      {% render 'breadcrumb', product: product %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product breadcrumb",
  "tag": "section",
  "class": "section section-page-title",
  "settings": [
    {
      "type": "select",
      "id": "setwidthout",
      "label": "Set Width",
      "default": "full",
      "options": [
        {
          "value": "container",
          "label": "Box"
        },
        {
          "value": "container-fluid",
          "label": "Container Fluid"
        },
        {
          "value": "full",
          "label": "Full"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 110,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 35
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 110,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 35
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height banner",
      "max": 800,
      "min": 10,
      "step": 10,
      "unit": " px",
      "default": 150
    },
    {
      "type": "text",
      "id": "margin_desktop",
      "label": "t:sections.all.margin_desktop.label",
      "info": "t:sections.all.margin_desktop.info"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },

    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#282828"
    },

    {
        "type": "color_background",
        "id": "background_gradient",
        "label": "Background gradient"
      },

    {
      "type": "color",
      "id": "color_title",
      "label": "Color Breadcrumb Title",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "color_breadcrumb",
      "label": "Color Breadcrumb",
      "default": "#fff"
    }
  ],
  "presets": [
    {
      "name": "Product breadcrumb"
    }
  ]
}
{% endschema %}


