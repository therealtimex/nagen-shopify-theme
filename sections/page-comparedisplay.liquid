<style>
  #no-comparedisplay{
    display: none;
  }
  #no-comparedisplay.active{
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 160px;
    text-align: center;
  }
  #ap-comparedisplay .ap-productlist__inner {
    --ap-productlist-column-gap: 0;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-flow: row;
    gap: 30px;
  }
  .compare {
    padding-top: 0;
    padding-bottom: 60px;
  }
  @media (max-width: 991px) {
    #ap-comparedisplay .ap-productlist__inner {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 576px) {
    #ap-comparedisplay .ap-productlist__inner {
      grid-template-columns: repeat(1, 1fr);
      padding: 0;
    }
  }
</style>

<div class="compare">
  <div class="container">
    <ap-comparedisplay id="ap-comparedisplay" section-id="{{ section.id }}" class="section section--flush">
      <div class="ap-productlist__inner ap-productlist__inner--scroller ap-productlist__inner--desktop-no-scroller hide-scrollbar">
        {%- for product in predictive_search.resources.products -%}
            {% render 'product-grid', product: product %}
        {% endfor %}
      </div>
    </ap-comparedisplay>
    
    <div id="no-comparedisplay">
      {{ 'templates.compare.empty' | t }}
    </div>
  </div>
</div>
