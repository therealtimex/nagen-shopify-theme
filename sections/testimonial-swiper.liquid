{%- assign id = '#shopify-section-' | append: section.id -%}

{% style %}


  {{ id }} {
      {%- if section.settings.background_repeat -%}
        background-repeat: repeat;
      {%- else -%}
        background-repeat: no-repeat;
      {%- endif -%}
      {%- if section.settings.background_size != "default" and section.settings.background_size != "custom" -%}
        background-size: {{ section.settings.background_size }};
      {%- endif -%}
      {%- if section.settings.background_size == "custom" -%}
        background-size: {{ section.settings.background_size_custom }}%;
      {%- endif -%}
      {%- if section.settings.background_position != "custom" -%}
        background-position: {{ section.settings.background_position }};
      {%- else -%}
        background-position-x: {{ section.settings.background_position_x }};
        background-position-y: {{ section.settings.background_position_y }};
      {%- endif -%}
    }

    {{ id }} .testimonial-banner {
      width: {{ section.settings.banner_width |  append: '%' }};
    }

    {{ id }} .testimonial {
      flex: 1;
    }

    {%- if section.settings.overflow == 'visible' -%}
      {{ id }} .swiper {
        overflow: visible;
      }
    {%- endif -%}

    

  

  {{ id }} .testimonial-item {
    position: relative;
    padding: {{ section.settings.item_padding_desktop }};
    border-radius: {{ section.settings.item_border_radius }};
    background-color: {{ section.settings.item_background_color }};
    {%- if section.settings.enable_shadow -%}
      box-shadow: 0px 3px 18px rgba(0, 0, 0, 0.05);
    {%- endif -%}
  }

  {{ id }} .rating {
    margin-bottom: {{ section.settings.item_rating_space |  append: 'px' }};
  }

  {{ id }} .testimonial-content {
    margin-bottom: {{ section.settings.item_content_space |  append: 'px' }};
  }

  
  @media (max-width: 1199px) {
    {{ id }} .testimonial-item {
      padding: {{ section.settings.item_padding_tablet }};
    }

    {{ id }} .testimonial-banner {
      width: {{ section.settings.banner_width_tablet | append: '%' }};
    }
  }
  @media (max-width: 768px) {

  {{ id }} .testimonial-banner {
      width: {{ section.settings.banner_width_tablet_small | append: '%' }};
    }
  
    {{ id }} .testimonial-item {
      padding: {{ section.settings.item_padding_mobile }};
    }
  }

  @media (max-width: 575px) {
    {{ id }} .testimonial-banner {
      width: {{ section.settings.banner_width_mobile | append: '%' }};
    }
  }

  /* Centered Layout Styles */
  {%- if section.settings.layout_style == 'centered' -%}
    {{ id }} .testimonial-item--centered {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 0;
    }

    /* Quote Icon */
    {{ id }} .testimonial-item--centered .testimonial-quote-icon {
      margin-bottom: 24px;
      color: {{ section.settings.quote_icon_color | default: '#21395D' }};
    }

    {{ id }} .testimonial-item--centered .testimonial-quote-icon svg {
      width: 48px;
      height: 48px;
    }

    /* Testimonial Content */
    {{ id }} .testimonial-item--centered .testimonial-content {
      font-size: 18px;
      line-height: 1.7;
      font-weight: 400;
      color: {{ section.settings.testimonial_content_color | default: '#2d3748' }};
      margin-bottom: 24px;
      max-width: 600px;
    }

    /* Rating Stars */
    {{ id }} .testimonial-item--centered .rating {
      display: flex;
      justify-content: center;
      gap: 4px;
      margin-bottom: 24px;
    }

    {{ id }} .testimonial-item--centered .rating span {
      display: flex;
    }

    {{ id }} .testimonial-item--centered .rating svg {
      width: 18px;
      height: 18px;
    }

    /* Author Block - Avatar + Name inline */
    {{ id }} .testimonial-item--centered .testimonial-author-block {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
    }

    /* Circular Avatar */
    {{ id }} .testimonial-item--centered .testimonial-avatar {
      width: {{ section.settings.avatar_size | default: 48 }}px;
      height: {{ section.settings.avatar_size | default: 48 }}px;
      {%- if section.settings.avatar_style == 'circle' or section.settings.avatar_style == blank -%}
        border-radius: 50%;
      {%- elsif section.settings.avatar_style == 'rounded' -%}
        border-radius: 8px;
      {%- else -%}
        border-radius: 0;
      {%- endif -%}
      overflow: hidden;
      flex-shrink: 0;
      border: 2px solid rgba(33, 57, 93, 0.1);
    }

    {{ id }} .testimonial-item--centered .testimonial-avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    /* Author Info */
    {{ id }} .testimonial-item--centered .testimonial-info {
      text-align: left;
    }

    {{ id }} .testimonial-item--centered .testimonial-name {
      font-size: 15px;
      font-weight: 600;
      line-height: 1.4;
      color: {{ section.settings.testimonial_name_color | default: '#21395D' }};
      margin: 0 0 2px 0;
    }

    {{ id }} .testimonial-item--centered .testimonial-job {
      font-size: 13px;
      font-weight: 400;
      line-height: 1.4;
      color: {{ section.settings.testimonial_job_color | default: '#718096' }};
      margin: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
      {{ id }} .testimonial-item--centered {
        padding: 30px 20px;
      }

      {{ id }} .testimonial-item--centered .testimonial-quote-icon svg {
        width: 40px;
        height: 40px;
      }

      {{ id }} .testimonial-item--centered .testimonial-content {
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 20px;
      }

      {{ id }} .testimonial-item--centered .rating {
        margin-bottom: 20px;
      }

      {{ id }} .testimonial-item--centered .testimonial-avatar {
        width: {{ section.settings.avatar_size | default: 48 | minus: 8 }}px;
        height: {{ section.settings.avatar_size | default: 48 | minus: 8 }}px;
      }
    }
  {%- endif -%}
{% endstyle %}


<div class="testimonial-section">
  <div class="shopify-container">
    {% render 'section-header' %}
    <div class="row">
      {%- if section.settings.enable_banner and section.settings.banner_image != blank -%}
          <div class="testimonial-banner col">
            <div class="d-flex justify-content-center justify-content-md-start" {% if section.settings.banner_data_aos != 'none' %}
              data-aos="{{ section.settings.banner_data_aos }}"
            {% endif %}>
              {{ section.settings.banner_image | image_url: width: section.settings.banner_image.width |  image_tag }}
            </div>
          </div>
        
      {%- endif -%}

      
        <div class="testimonial col" >
          
          <div class="testimonial-swiper">
              {%- assign autoplay_time = section.settings.time | default: '0' -%}
              {%- if autoplay_time == blank or autoplay_time == '0' -%}
                {%- assign autoplay_time = '4000' -%}
              {%- endif -%}
              <div id="swiper-{{ section.id }}" class="ap-swiper swiper"
              data-desktop-item="{{ section.settings.desktop_item }}"
              data-tablet-item="{{ section.settings.tablet_item }}"
              data-tabletsmall-item="{{ section.settings.tablet_small_item }}"
              data-mobile-item="{{ section.settings.mobile_item }}"
              data-loop="{{ section.settings.loop }}"
              data-rows="{{ section.settings.rows }}"
              data-direction="{{ section.settings.direction }}"
              data-navigation="{{ section.settings.navigation }}"
              data-pagination="{{ section.settings.pagination }}"
              data-space="{{ section.settings.space }}"
              data-space-desktop="{{ section.settings.space_desktop }}"
              data-time="{{ autoplay_time }}" data-center="{{ section.settings.centeredSlides }}">
                <div class="swiper-wrapper">
                  {% for block in section.blocks %}
                    <div class="swiper-slide">
                      {%- if section.settings.layout_style == 'centered' -%}
                        {%- comment -%} Centered Layout: Quote Icon → Content → Rating → Author Block {%- endcomment -%}
                        <div id="block-{{ block.id }}" class="testimonial-item testimonial-item--centered" {% if section.settings.data_aos_item != 'none' %}data-aos="{{ section.settings.data_aos_item }}"{% endif %}>
                          {%- if block.settings.icon_child != blank -%}
                            <div class="testimonial-quote-icon">
                              {{ block.settings.icon_child }}
                            </div>
                          {%- endif -%}
                          {%- if block.settings.content != blank -%}
                            <div class="testimonial-content">
                              {{ block.settings.content }}
                            </div>
                          {%- endif -%}
                          {%- if section.settings.show_rating -%}
                            <div class="rating">
                              {%- for i in (1..block.settings.rating) -%}
                                <span style="color: {{ section.settings.icon_color_active }}">{{ section.settings.icon_rating }}</span>
                              {%- endfor -%}
                              {%- assign index = block.settings.rating | plus: 1 -%}
                              {%- for i in (index..5) -%}
                                <span style="color: {{ section.settings.icon_color }}">{{ section.settings.icon_rating }}</span>
                              {%- endfor -%}
                            </div>
                          {%- endif -%}
                          <div class="testimonial-author-block">
                            {%- if block.settings.image != blank -%}
                              <div class="testimonial-avatar">
                                {{ block.settings.image | image_url: width: 200 | image_tag: loading: 'lazy' }}
                              </div>
                            {%- endif -%}
                            <div class="testimonial-info">
                              {%- if block.settings.name != blank -%}
                                <h6 class="testimonial-name">{{ block.settings.name }}</h6>
                              {%- endif -%}
                              {%- if block.settings.job != blank -%}
                                <p class="testimonial-job">{{ block.settings.job }}</p>
                              {%- endif -%}
                            </div>
                          </div>
                        </div>
                      {%- else -%}
                        {%- comment -%} Default Layout {%- endcomment -%}
                        <div id="block-{{ block.id }}" class="testimonial-item" {% if section.settings.data_aos_item != 'none' %}
                          data-aos="{{ section.settings.data_aos_item }}"
                        {% endif %}>
                          {%- if block.settings.icon_child != blank -%}
                            <div class="testimonial-quote-icon">
                              {{ block.settings.icon_child }}
                            </div>
                          {%- endif -%}
                          {%- if section.settings.show_rating -%}
                            <div class="rating">
                              {%- for i in (1..block.settings.rating) -%}
                                  <span class="d-flex" style="color: {{ section.settings.icon_color_active }}">{{ section.settings.icon_rating }}</span>
                              {%- endfor -%}

                              {%- assign index = block.settings.rating | plus : 1 -%}

                              {%- for i in (index..5) -%}
                                <span class="d-flex" style="color: {{ section.settings.icon_color }}">{{ section.settings.icon_rating }}</span>
                              {%- endfor -%}
                            </div>
                          {%- endif -%}
                          {%- if block.settings.content != blank -%}
                            <div class="testimonial-content" style="color: {{ section.settings.testimonial_content_color }}">
                              {{ block.settings.content }}
                            </div>
                          {%- endif -%}

                          <div class="testimonial-author">

                            {%- if block.settings.name != blank or block.settings.job != blank -%}
                              <div class="testimonial-info">
                                {%- if block.settings.name != blank -%}
                                  <h6 class="testimonial-name" style="color: {{ section.settings.testimonial_name_color }}">
                                    {{ block.settings.name }}
                                  </h6>
                                {%- endif -%}
                                {%- if block.settings.job != blank -%}
                                  <p class="testimonial-job" style="color: {{ section.settings.testimonial_job_color }}">
                                    {{ block.settings.job }}
                                  </p>
                                {%- endif -%}
                              </div>
                            {%- endif -%}
                            {%- if block.settings.image != blank -%}
                              <div class="testimonial-image">
                                {{ block.settings.image | image_url: width: block.settings.image.width, height: block.settings.image.height | image_tag }}
                              </div>
                            {%- endif -%}
                          </div>


                        </div>
                      {%- endif -%}
                    </div>
                  {% endfor %}
                </div>
              </div>
              {% if section.settings.pagination %}
                <div class="swiper-pagination swiper-pagination_{{ section.id }}"></div>
              {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

