{% render 'section-style' %}
{%- assign id = '#shopify-section-' | append: section.id -%}

{%- style -%}

  {{ id }} .list-collections__item-list {
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr)
  }

  {{ id }} .list-collections__item {
    padding: 40px;
    border-radius: 18px;
    box-shadow: 0px 1px 11px rgba(0, 0, 0, 0.03);
    background: #F1F7F6;
    text-align: left;
    border: 1px solid rgb(var(--border-color));
    transition: 0.3s all ease;
  }

  {{ id }} .list-collections__item:hover {
    background: linear-gradient(119.44deg, #DCE9E2 47.06%, #FFE7DB 100%);
  }

  .list-collections__item-image-wrapper {
    margin-bottom: 23px;
  }

  .collections__item--title {
    margin-bottom: 15px;
  }

  .collections__item--description {
    margin-bottom: 30px;
  }

  .collections__item--button {
    min-width: 40px;
    height: 40px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    border: 1px solid #E5E7EA;
    color: var(--heading-color);
    transition: 0.3s all ease;
  }

  .collections__item--button span {
    transition: 0.3s all ease;
  }

  .collections__item--button:hover {
    background-color: var(--primary_hover);
    color: #fff;
  }

  .collections__item--button:hover span {
    transform: rotate(45deg);
  }

  
  
  @media (max-width: 1199px) {
    {{ id }} .list-collections__item-list {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr)
    }
  }
  @media (max-width: 991px) {
    {{ id }} .list-collections__item-list {
      grid-template-columns: repeat({{ section.settings.columns_tablet_small }}, 1fr)
    }
  }
  @media (max-width: 575px) {
    {{ id }} .list-collections__item-list {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr)
    }
  }


{%- endstyle -%}


{%- if section.settings.display_default_collection -%}
  {%- liquid
    case section.settings.sort
      when 'products_high' or 'products_low'
        assign collections = collections | sort: 'all_products_count'
      when 'date' or 'date_reversed'
        assign collections = collections | sort: 'published_at'
    endcase

    if section.settings.sort == 'products_high' or section.settings.sort == 'date_reversed' or section.settings.sort == 'alphabetical_reversed'
      assign collections = collections | reverse
    endif

    assign moduloResult = 28 | modulo: section.settings.columns_desktop
    assign paginate_by = 30
    if moduloResult == 0
      assign paginate_by = 28
    endif
  -%}
<section>
  <ap-collectionlist reveal-on-scroll="" class="list-collections list-collections--collage ap-object-loaded">
    <div class="container">
      {% comment %} <h1 class="title title--primary">{{ section.settings.title | escape }}</h1> {% endcomment %}
      <div class="list-collections__item-list">
        {%- paginate collections by paginate_by -%}
          {%- for collection in collections -%}
            
            {%- if collection.template_suffix != 'services' -%}
              <div id="block-template--14993173119184__1631799853a650e834-1631799853a650e834-0"  class="list-collections__item  has-overlay image-zoom">
            <div class="list-collections__item-image-wrapper">
              <a href="{{ collection.url }}">
              <img
                data-srcset="{%- if collection.featured_image.width >= 165 -%}{{ collection.featured_image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if collection.featured_image.width >= 330 -%}{{ collection.featured_image | image_url: width: 330 }} 330w,{%- endif -%}
                  {%- if collection.featured_image.width >= 535 -%}{{ collection.featured_image | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if collection.featured_image.width >= 750 -%}{{ collection.featured_image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if collection.featured_image.width >= 1000 -%}{{ collection.featured_image | image_url: width: 1000 }} 1000w,{%- endif -%}
                  {%- if collection.featured_image.width >= 1500 -%}{{ collection.featured_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {%- if collection.featured_image.width >= 3000 -%}{{ collection.featured_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                  {{ collection.featured_image | image_url }} {{ collection.featured_image.width }}w"
                src="{{ collection.featured_image | image_url: width: 1500 }}"
                sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                alt=""
                height="{{ collection.featured_image.height }}"
                width="{{ collection.featured_image.width }}"
                loading="lazy"
                class="list-collections__item-image"
              > 
              </a>
            </div>
            <div class="list-collections__item-info text-container">
              <h6 class="collections__item--title">
                <a href="{{ collection.url }}">
                {%- if collection.title != blank -%}
                  {{- collection.title | escape -}}
                {%- else -%}
                  {{ 'onboarding.collection_title' | t }}
                {%- endif -%}
                </a>
              </h6>
              {%- if section.settings.show_description and collection.description != blank -%}
                <div class="collections__item--description">
                  {{ collection.description }}
                </div>
              {%- endif -%}

              <a href="{{ collection.url }}" class="collections__item--button">
                <span>{%  render 'icon-arrow-3' %}</span>
              </a>

            </div>
          </div>
            {%- endif -%}

          
        {%- endfor -%}
        {%- endpaginate -%}
        </div>
      </div>
  </ap-collectionlist>
</section> 
{%- endif -%}

