{% render 'section-style' %}

<style>
    #shopify-section-{{ section.id }} .ap-productlist__inner--scroller {
        gap: 0;
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__dot {
        background: {{ section.settings.dot_inner_background }};
        border-width: 2px;
        border-style: solid;
        border-color: transparent;
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__dot:hover {
        background-color: #000;
        color: #fff;
        border-color: #fff;
    }
    [dir=ltr] #shopify-section-{{ section.id }} .ap-lookbookshop__product--reverse {
      left: 50%;
      top: calc(100% + 5px);
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__product:before {
        display: none;
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__product {
      min-width: 280px;
      width: 100%;
    }
    [dir=ltr] #shopify-section-{{ section.id }} .ap-lookbookshop__product-image {
        margin-right: 14px;
    }
    [dir=ltr] #shopify-section-{{ section.id }} .ap-lookbookshop__product {
      padding: 12px;
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__product-image {
        flex: none;
        width: 60px;
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__product[open] {
      transform: scale(1) translateX(-50%);
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__product-info > .ap-lookbookshop__product-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: 10px;
        font-weight: 400;
        line-height: 1.2;
        font-size: 14px;
        font-family: var(--hd-font-family);
        color: var(--color-accent-5);
        margin-bottom: 10px;
    }
    #shopify-section-{{ section.id }} .product-item-meta__title {
        margin-bottom: 10px;
        font-size: calc(var(--base-font-size) + 2px);
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__product-info > .price {
      font-size: 12px;
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__product-wrapper {
        z-index: unset;
    }
    #shopify-section-{{ section.id }} .ap-text-loaderbutton {
        justify-content: center;
    }
    #shopify-section-{{ section.id }} .ap-text-loaderbutton svg {
        display: none;
    }
    #shopify-section-{{ section.id }} .ap-lookbookshop__dot {
      width: 29px;
      height: 29px;
      line-height: 26px;
      font-weight: 600;
      font-size: 10px;
    }
    .banner-cart {
      position: absolute;
      bottom: 16px;
      right: 19px;
      width: 39px;
      height: 39px;
      text-align: center;
      line-height: 46px;
      background-color: #0000003b;
      border-radius: 50%;
      color: #fff;
    }
    .banner-cart:hover {
      background-color: var(--primary);
    }
    .banner-cart a:hover {
      color: #fff;
    }

    #shopify-section-{{ section.id }} .banner-carousel {
      position: relative;
    }
    #shopify-section-{{ section.id }} .ap-nextap-buttonprev {
      position: absolute;
      top: 50%;
    }
    #shopify-section-{{ section.id }} .ap-nextap-buttonprev--prev {
      left: 0;
    }
    #shopify-section-{{ section.id }} .ap-nextap-buttonprev--next {
      right: 0;
    }
    #shopify-section-{{ section.id }} .banner-carousel-content-item > img {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
    @media (max-width: 1500px) {
      [dir=ltr] #shopify-section-template--21686505603383__e18d94d5-1d8c-43de-b7c6-51f8685639b4 .ap-lookbookshop__product--reverse {
        left: 50%;
        transform: translateX(-50%);
        top: 110%;
      }
    }
    @media (max-width: 767px) {
      #shopify-section-{{ section.id }} .shopify-payment-button__button--unbranded {
        width: 100%;
      }
    }

    #shopify-section-{{ section.id }} .banner-carousel-item {
      padding: 0 calc(10px / 2);
    }
    #shopify-section-{{ section.id }} .scroller {
      margin: 0 calc(-10px / 2);   
    }
    #shopify-section-{{ section.id }} .banner-carousel-box {
      position: relative;
    }
    #shopify-section-{{ section.id }} .ap-productlist__inner--scroller {
      grid-template-columns: unset;
    }
    #shopify-section-{{ section.id }} .ap-productlist__inner--scroller {
      margin:0;
      padding:0;
    }

    {% for block in section.blocks %}
        @media screen and (max-width: 575px) {
          #shopify-section-{{ section.id }} {
                --section-products-per-row: {{ section.settings.products_per_row_mobile }};
            }
            #shopify-section-{{ section.id }} .ap-productlist__inner--scroller {
                grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
            }
        }
  
        @media (min-width:576px) and (max-width: 767px) {
            #shopify-section-{{ section.id }} {
                --section-products-per-row: {{ section.settings.products_per_row_ipad }};
            }
            #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
                grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
            }
        }
    
        @media (min-width: 768px) and (max-width: 1199px) {
            #shopify-section-{{ section.id }} {
                --section-products-per-row: {{ section.settings.products_per_row_tablet }}
            }
            #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
                grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
            }
        }
        
        @media screen and (min-width: 1200px) {
            #shopify-section-{{ section.id }} {
                --section-products-per-row: {{ section.settings.products_per_row_desktop }};
            }
            #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
                grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
            }
        }

        {% if block.settings.product_1 %}
            #block-{{ block.id }}-1 {
                top: {{ block.settings.product_1_top }}%;
                left: {{ block.settings.product_1_left }}%;
            }
            @media screen and (max-width: 740px) {
                #block-{{ block.id }}-1 {
                    top: {{ block.settings.product_1_top_tablet }}%;
                    left: {{ block.settings.product_1_left_tablet }}%;
                }
            }
        {% endif %}
        {% if block.settings.product_2 %}
            #block-{{ block.id }}-2 {
                top: {{ block.settings.product_2_top }}%;
                left: {{ block.settings.product_2_left }}%;
            }
            @media screen and (max-width: 740px) {
                #block-{{ block.id }}-2 {
                    top: {{ block.settings.product_2_top_tablet }}%;
                    left: {{ block.settings.product_2_left_tablet }}%;
                }
            }
        {% endif %}
        {% if block.settings.product_3 %}
            #block-{{ block.id }}-3 {
                top: {{ block.settings.product_3_top }}%;
                left: {{ block.settings.product_3_left }}%;
            }
            @media screen and (max-width: 740px) {
                #block-{{ block.id }}-3 {
                    top: {{ block.settings.product_3_top_tablet }}%;
                    left: {{ block.settings.product_3_left_tablet }}%;
                }
            }
        {% endif %}
    {% endfor %}
</style>

<section class="look-book-list">
  <div class="{{ section.settings.setwidthout }}">
    {% if section.settings.tab_heading != blank %}
      <header class="section__header text-{{ section.settings.text_align }} mb-60">
        {% if section.settings.sub_heading != blank %}
          <p class="heading sub-heading mb-35">{{ section.settings.sub_heading }}</p>
        {% endif %}
        <h3 class="heading h{{ section.settings.tab_heading_size }} mb-20">{{ section.settings.tab_heading
          }}</h3>
        {% if section.settings.tab_description != blank %}
        <div class="heading-description">
          {{ section.settings.tab_description }}
        </div>
        {% endif %}
        {% if section.settings.btn_text != blank %}
        <div class="btn-more">
          <a href="{{ section.settings.btn_link }}" class="button {{ section.settings.style_btn }}">
            {{ section.settings.btn_text }}
            {% render 'icon-arrow-2' %}
          </a>
        </div>
        {% endif %}
      </header>
    {% endif %}
