        <div class="banner-carousel-content">
            <div class="scroller">
                <div id="ap-scroll" class="ap-productlist__inner ap-productlist__inner--scroller hide-scrollbar">
                    {% for block in section.blocks %}
                        {% case block.type %}
                            {% when 'banner_item' %}
