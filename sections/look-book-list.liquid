                                    <div class="banner-carousel-box">
                                        <div class="banner-carousel-infor">
                                            <div class="banner-carousel-content-item">
                                                {% if block.settings.image != blank %}
                                                <img src="{{ block.settings.image | image_url: width: 1920 }}" width="auto" height="auto" loading="lazy" alt="">
                                                {% else %}
                                                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                                {% endif %}
                                                <div class="banner-cart">
                                                  <a href="/cart" is="ap-togglelink" ap-controlsaria="mini-cart" ap-expanded-aria="false" class="banner-cart__link" aria-label="Cart" data-no-instant="">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="19" viewBox="0 0 16 19">
                                                      <path style="fill: currentColor;" d="M501.124,1790.75h-3.1v-0.79a3.98,3.98,0,0,0-7.96,0v3.96h1.592v-1.59h3.184v-1.58h-3.184v-0.79a2.388,2.388,0,0,1,4.776,0v3.96h1.592v-1.59h1.672l0.716,11.09H487.751l0.637-11.09h0.08v-1.58h-1.513L486,1805h16Z" transform="translate(-486 -1786)"/>
                                                    </svg>
                                                  </a>
                                                </div>
                                                {% if block.settings.product_1 != null %}
                                                <div class="banner-product">
                                                    {% if block.settings.product_1 != null %}
                                                        <div id="block-{{ block.id }}-1" class="ap-lookbookshop__product-wrapper">
                                                            <button type="button" is="toggle-button" reveal="" class="ap-lookbookshop__dot tap-area hd-phone" ap-controlsaria="block-{{ block.id }}-1-product" ap-expanded-aria="{% if block.settings.product_1.product_1_show %}true{% else %}false{% endif %}" style="opacity: 1;">                                                              
                                                                <span>1</span>
                                                            </button>
                                        
                                                            <button type="button" is="toggle-button" reveal="" class="ap-lookbookshop__dot tap-area hd-tablet-and-up" ap-controlsaria="block-{{ block.id }}-1-popover" ap-expanded-aria="{% if block.settings.product_1.product_1_show %}true{% else %}false{% endif %}" style="opacity: 1;">                                                              
                                                                <span>1</span>
                                                            </button>
                                        
                                                            <ap-elementopen id="block-{{ block.id }}-1-product" class="ap-lookbookshop__product ap-lookbookshop__product--reverse hd-phone" {% if block.settings.product_1.product_1_show %}open=""{% endif %}>
                                                                <img class="ap-lookbookshop__product-image" loading="lazy" sizes="72px" alt="{{ block.settings.product_1.title }}" 
                                                                    src="{{ block.settings.product_1.featured_media | image_url: width: product.featured_media.width }}" 
                                                                    data-srcset="
                                                                        {%- if block.settings.product_1.featured_media >= 72 -%}{{ block.settings.product_1.featured_media | image_url: width: 72 }} 72w,{%- endif -%}
                                                                        {%- if block.settings.product_1.featured_media >= 144 -%}{{ block.settings.product_1.featured_media | image_url: width: 144 }} 144w,{%- endif -%}
                                                                        {%- if block.settings.product_1.featured_media >= 216 -%}{{ block.settings.product_1.featured_media | image_url: width: 216 }} 216w,{%- endif -%}
                                                                        {%- if block.settings.product_1.featured_media >= 288 -%}{{ block.settings.product_1.featured_media | image_url: width: 288 }} 288w,{%- endif -%}
                                                                    "
                                                                    width="{{ block.settings.product_1.featured_media.width }}" height="{{ block.settings.product_1.featured_media.width }}">
                                                                <div class="ap-lookbookshop__product-info">
                                                                    <a href="/products/{{ block.settings.product_1.handle }}" class="ap-lookbookshop__product-title">{{ block.settings.product_1.title }}</a>
                                        
                                                                    <div class="ap-lookbookshop__product-bottom-wrapper">
                                                                        <span class="price">
                                                                            <span class="visually-hidden">Sale price</span>{{ block.settings.product_1.price | money }}
                                                                        </span>
                                                                        <button is="toggle-button" class="ap-lookbookshop__product-link link text--subdued" ap-controlsaria="block-{{ block.id }}-1-drawer" ap-expanded-aria="{% if block.settings.product_1.product_1_show %}true{% else %}false{% endif %}">Quick view</button>
                                                                    </div>
                                                                </div>
                                                            </ap-elementopen>

                                                        </div>
                                                    {% endif %}
                                                    {% if block.settings.product_2 != null %}
                                                        <div id="block-{{ block.id }}-2" class="ap-lookbookshop__product-wrapper">
                                                            <button type="button" is="toggle-button" reveal="" class="ap-lookbookshop__dot tap-area hd-phone" ap-controlsaria="block-{{ block.id }}-2-product" ap-expanded-aria="{% if block.settings.product_2.product_2_show %}true{% else %}false{% endif %}" style="opacity: 1;">                                                            
                                                                <span>2</span>
                                                            </button>
                                                    
                                                            <button type="button" is="toggle-button" reveal="" class="ap-lookbookshop__dot tap-area hd-tablet-and-up" ap-controlsaria="block-{{ block.id }}-2-popover" ap-expanded-aria="{% if block.settings.product_2.product_2_show %}true{% else %}false{% endif %}" style="opacity: 1;">                                                            
                                                                <span>2</span>
                                                            </button>
                                                    
                                                            <ap-elementopen id="block-{{ block.id }}-2-product" class="ap-lookbookshop__product ap-lookbookshop__product--reverse hd-phone" {% if block.settings.product_2.product_2_show %}open=""{% endif %}>
                                                                <img class="ap-lookbookshop__product-image" loading="lazy" sizes="72px" alt="{{ block.settings.product_2.title }}" 
                                                                    src="{{ block.settings.product_2.featured_media | image_url: width: product.featured_media.width }}" 
                                                                    data-srcset="
                                                                        {%- if block.settings.product_2.featured_media >= 72 -%}{{ block.settings.product_2.featured_media | image_url: width: 72 }} 72w,{%- endif -%}
                                                                        {%- if block.settings.product_2.featured_media >= 144 -%}{{ block.settings.product_2.featured_media | image_url: width: 144 }} 144w,{%- endif -%}
                                                                        {%- if block.settings.product_2.featured_media >= 216 -%}{{ block.settings.product_2.featured_media | image_url: width: 216 }} 216w,{%- endif -%}
                                                                        {%- if block.settings.product_2.featured_media >= 288 -%}{{ block.settings.product_2.featured_media | image_url: width: 288 }} 288w,{%- endif -%}
                                                                    "
                                                                    width="{{ block.settings.product_2.featured_media.width }}" height="{{ block.settings.product_2.featured_media.width }}">
                                                                <div class="ap-lookbookshop__product-info">
                                                                    <a href="/products/{{ block.settings.product_2.handle }}" class="ap-lookbookshop__product-title">{{ block.settings.product_2.title }}</a>
                                                    
                                                                    <div class="ap-lookbookshop__product-bottom-wrapper">
                                                                        <span class="price">
                                                                            <span class="visually-hidden">Sale price</span>{{ block.settings.product_2.price | money }}
                                                                        </span>
                                                                        <button is="toggle-button" class="ap-lookbookshop__product-link link text--subdued" ap-controlsaria="block-{{ block.id }}-2-drawer" ap-expanded-aria="{% if block.settings.product_2.product_2_show %}true{% else %}false{% endif %}">Quick view</button>
                                                                    </div>
                                                                </div>
                                                            </ap-elementopen>
                                                    
                                                        </div>
                                                    {% endif %}
                                                    {% if block.settings.product_3 != null %}
                                                        <div id="block-{{ block.id }}-3" class="ap-lookbookshop__product-wrapper">
                                                            <button type="button" is="toggle-button" reveal="" class="ap-lookbookshop__dot tap-area hd-phone" ap-controlsaria="block-{{ block.id }}-3-product" ap-expanded-aria="{% if block.settings.product_3.product_3_show %}true{% else %}false{% endif %}" style="opacity: 1;">                                                           
                                                                <span>3</span>
                                                            </button>
                                                    
                                                            <button type="button" is="toggle-button" reveal="" class="ap-lookbookshop__dot tap-area hd-tablet-and-up" ap-controlsaria="block-{{ block.id }}-3-popover" ap-expanded-aria="{% if block.settings.product_3.product_3_show %}true{% else %}false{% endif %}" style="opacity: 1;">     
                                                                <span>3</span>
                                                            </button>
                                                    
                                                            <ap-elementopen id="block-{{ block.id }}-3-product" class="ap-lookbookshop__product ap-lookbookshop__product--reverse hd-phone" {% if block.settings.product_3.product_3_show %}open=""{% endif %}>
                                                                <img class="ap-lookbookshop__product-image" loading="lazy" sizes="72px" alt="{{ block.settings.product_3.title }}" 
                                                                    src="{{ block.settings.product_3.featured_media | image_url: width: product.featured_media.width }}" 
                                                                    data-srcset="
                                                                        {%- if block.settings.product_3.featured_media >= 72 -%}{{ block.settings.product_3.featured_media | image_url: width: 72 }} 72w,{%- endif -%}
                                                                        {%- if block.settings.product_3.featured_media >= 144 -%}{{ block.settings.product_3.featured_media | image_url: width: 144 }} 144w,{%- endif -%}
                                                                        {%- if block.settings.product_3.featured_media >= 216 -%}{{ block.settings.product_3.featured_media | image_url: width: 216 }} 216w,{%- endif -%}
                                                                        {%- if block.settings.product_3.featured_media >= 288 -%}{{ block.settings.product_3.featured_media | image_url: width: 288 }} 288w,{%- endif -%}
                                                                    "
                                                                    width="{{ block.settings.product_3.featured_media.width }}" height="{{ block.settings.product_3.featured_media.width }}">
                                                                <div class="ap-lookbookshop__product-info">
                                                                    <a href="/products/{{ block.settings.product_3.handle }}" class="ap-lookbookshop__product-title">{{ block.settings.product_3.title }}</a>
                                                    
                                                                    <div class="ap-lookbookshop__product-bottom-wrapper">
                                                                        <span class="price">
                                                                            <span class="visually-hidden">Sale price</span>{{ block.settings.product_3.price | money }}
                                                                        </span>
                                                                        <button is="toggle-button" class="ap-lookbookshop__product-link link text--subdued" ap-controlsaria="block-{{ block.id }}-3-drawer" ap-expanded-aria="{% if block.settings.product_3.product_3_show %}true{% else %}false{% endif %}">Quick view</button>
                                                                    </div>
                                                                </div>
                                                            </ap-elementopen>
                                                    
                                                        </div>
                                                    {% endif %}
                                                </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>

                                    {% if block.settings.product_1 != null %}
                                      <ap-popoverquickbuy href="/products/{{ block.settings.product_1.handle }}?view=quick-buy-popover" id="block-{{ block.id }}-1-popover" class="popover popover--quick-buy"></ap-popoverquickbuy>
                                      <ap-quickbuy href="/products/{{ block.settings.product_1.handle }}?view=quick-buy-drawer" id="block-{{ block.id }}-1-drawer" class="drawer drawer--large drawer--quick-buy"></ap-quickbuy>
                                    {% endif %}
                                    {% if block.settings.product_2 != null %}
                                      <ap-popoverquickbuy href="/products/{{ block.settings.product_2.handle }}?view=quick-buy-popover" id="block-{{ block.id }}-1-popover" class="popover popover--quick-buy"></ap-popoverquickbuy>
                                      <ap-quickbuy href="/products/{{ block.settings.product_2.handle }}?view=quick-buy-drawer" id="block-{{ block.id }}-1-drawer" class="drawer drawer--large drawer--quick-buy"></ap-quickbuy>
