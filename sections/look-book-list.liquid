                                </banner-carousel-item>
                        {% endcase %}
                    {% endfor %}
                </div>
            </div>
            {% if section.settings.show_arrow %}
                <div class="carousel-arrow">
                    <ap-button-nextprev class="carousel__ap-nextprev hd-lg-none" style="--smallest-image-aspect-ratio: 1.0">
                        <button class="carousel__arrow ap-nextap-buttonprev ap-nextap-buttonprev--prev" disabled="">
                        <span class="visually-hidden">Previous</span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12" fill="none">
                            <path d="M7.40991 10.59L2.82991 6L7.40991 1.41L5.99991 0L-8.7738e-05 6L5.99991 12L7.40991 10.59Z"
                                fill="black" />
                            </svg>
                        </button>
                        <button class="carousel__arrow ap-nextap-buttonprev ap-nextap-buttonprev--next">
                        <span class="visually-hidden">Next</span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12" fill="none">
                            <path d="M0.590088 10.59L5.17009 6L0.590088 1.41L2.00009 0L8.00009 6L2.00009 12L0.590088 10.59Z" fill="black"/>
                            </svg>
                        </button>
                    </ap-button-nextprev>   
                </div>
            {% endif %}
        </div>
    </banner-carousel>
  </div>
</section>

{% schema %}
{
  "name": "Look Book List",
  "class": "shopify-section--ap-lookbook-list",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "setwidthout",
      "label": "Width Slideshow",
      "default": "full",
      "options": [
        {
          "value": "container",
          "label": "Box"
        },
        {
          "value": "container-fluid",
          "label": "Container Fluid"
        },
        {
          "value": "full",
          "label": "Full"
        }
      ]
    },
    {
      "id": "background-color",
      "type": "color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Margin section"
    },
    {
      "type": "text",
      "id": "margin_desktop",
      "label": "Margin desktop",
      "default": "0px 0px 0px 0px",
      "info": "Example: 0px 0px 0px 0px"
    },
    {
      "type": "text",
      "id": "margin_mobile",
      "label": "Margin mobile",
      "default": "0px 0px 0px 0px",
      "info": "Example: 0px 0px 0px 0px"
    },
    {
      "type": "header",
      "content": "Padding section"
    },
