                          src="{{ block.settings.image_wrapper | image_url: width: block.settings.image_wrapper.width }}" 
                          style="opacity: 1;" 
                          width="{{ block.settings.image_wrapper.width }}" height="{{ block.settings.image_wrapper.width }}">
                    {% else %}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                      <img loading="lazy" sizes="100vw" reveal="" class="ap-lookbookshop__image hd-lap-and-up" alt="" 
                          src="{{ block.settings.image_wrapper_tablet | image_url: width: block.settings.image_wrapper_tablet.width }}" 
                          style="opacity: 1;" width="{{ block.settings.image_wrapper_tablet.width }}" height="{{ block.settings.image_wrapper_tablet.width }}">
                  </div>
                  {% if block.settings.product_1 != null %}
