              </div>
            </service-item>
          {%- when 'before-after-image' -%}
            <div {% if block.settings.data_aos !="none" %}
              data-aos="{{ block.settings.data_aos }}"
              {% endif %} class="before-after-image-wrapper" style="
                --before-after-initial-drag-position: {{ block.settings.drag_position |  append: '%' }};
                --clip-path-offset: 0px;
                border-radius: {{ block.settings.border_radius |  append: 'px' }};
              ">

              {% assign sizes = "300,400,500,600,800,1000,1200,1400" | split: "," %}
              <div class="before-after-image-relative" style="
                  position: relative;
                  --desktop-height: {{ block.settings.desktop_height |  append: 'px' }};
                  --mobile-height: {{ block.settings.mobile_height |  append: 'px' }};
                ">
                {%- assign imageBefore = block.settings.image_before -%}
                {% if imageBefore %}
                  <img 
                    src="{{ imageBefore | image_url }}" 
                    alt="{{ imageBefore.alt | escape }}" 
                    srcset="
                      {% for size in sizes %}
                        {{ imageBefore | image_url: width: size }} {{ size }}w{% unless forloop.last %},{% endunless %}
                      {% endfor %}
                    "
                    loading="lazy"
                    draggable="false"
                    class="before-after-image before-after-image--cover">
                {% endif %}

                
              </div>
              <div style="
                  clip-path: inset(0 0 0 calc(var(--before-after-initial-drag-position, 50%) + var(--clip-path-offset, 0px)));
                  position: absolute;
                  top: 0;
                  bottom: 0;
                  left: 0;
                  right: 0;
                ">
                  {%- assign imageAfter = block.settings.image_after -%}
                    {% if imageAfter %}
                      <img 
                        src="{{ imageAfter | image_url }}" 
                        alt="{{ imageAfter.alt | escape }}" 
                        srcset="
                          {% for size in sizes %}
                            {{ imageAfter | image_url: width: size }} {{ size }}w{% unless forloop.last %},{% endunless %}
                          {% endfor %}
                        "
                        loading="lazy"
                        draggable="false"
                        class="before-after-image before-after-image--cover">
                    {% endif %}
              </div>
              <div style="
                  position: absolute;
                  top: 0;
                  bottom: 0;
                  left: 0;
                  right: 0;
                ">
                <div class="before-after__cursor" >
                  <span>{{ block.settings.drag_cursor_icon }}</span>
                  
                </div>
              </div>


                  <script>
                    (function () {
                        function setup() {

                           
                            const sectionId = document.querySelector('[data-section-id]')?.dataset.sectionId;
                            


                            const cursor = document.querySelector('.before-after__cursor');

                            const imageWrapper = document.querySelector('.before-after-image-wrapper');

                            // drag the cursor to update the imageWrapper's --clip-path-offset value (px)
                            let xStart, xEnd, xDiff, originalOffset;
                            function dragStart(event) {
                                xStart = event.clientX;
                                originalOffset = imageWrapper.style
                                    .getPropertyValue('--clip-path-offset')
                                    .slice(0, -2);
                                document.addEventListener('pointermove', dragMove);
                                document.addEventListener('pointerup', dragEnd);
                            }

                            function dragMove(event) {
                                xEnd = event.clientX;
                                xDiff = xEnd - xStart;

                                let result = xDiff + parseInt(originalOffset);
                                let cursorOffsetPercent = parseFloat(getComputedStyle(imageWrapper).getPropertyValue('--before-after-initial-drag-position'));
                                let containerWidth = imageWrapper.offsetWidth;
                                let pixelsOffset = (cursorOffsetPercent / 100) * containerWidth;

                                const negativeMax = -1 * (pixelsOffset);
                                const positiveMax = imageWrapper.offsetWidth - pixelsOffset;
                                if (result < negativeMax) {
                                    result = negativeMax;
                                } else if (result > positiveMax) {
                                    result = positiveMax;
                                }
                                imageWrapper.style.setProperty(
                                    '--clip-path-offset',
                                    result + 'px'
                                );
                            }

                            function dragEnd(event) {
                                document.removeEventListener('pointermove', dragMove);
                                document.removeEventListener('pointerup', dragEnd);
                            }

                            cursor.addEventListener('pointerdown', dragStart);
                        }
                        setup();
                        if (Shopify.designMode) {
                            document.addEventListener('shopify:section:load', setup);
                        }
                    })();
                </script>


            </div>

        {% endcase %}
