      {%- endif -%}
      {%- if section.settings.background_size != "default" and section.settings.background_size != "custom" -%}
        background-size: {{ section.settings.background_size }};
      {%- endif -%}
      {%- if section.settings.background_size == "custom" -%}
        background-size: {{ section.settings.background_size_custom }}%;
      {%- endif -%}
      {%- if section.settings.background_position != "custom" -%}
        background-position: {{ section.settings.background_position }};
      {%- else -%}
        background-position-x: {{ section.settings.background_position_x }};
        background-position-y: {{ section.settings.background_position_y }};
      {%- endif -%}
    }


    {%- for block in section.blocks -%}
      #block-{{ block.id }} .service-item {
        padding: {{ block.settings.block_padding_desktop }};
        border-radius: {{ block.settings.block_rounded |  append: 'px' }};
        background: {{ block.settings.bg_color }};
        transition: 0.3s all ease;
        max-width: {{ block.settings.item_width |  append: 'px' }};

        {%- if block.settings.direction_row -%}
          display: flex;
          align-items: {{ block.settings.align_items }};
          gap: {{ block.settings.item_gap |  append: 'px' }};
        {%- endif -%}

        @media (max-width: 1199px) {
          padding: {{ block.settings.block_padding_tablet }};
          background: {{ block.settings.bg_color_hover }}
        }
        @media (max-width: 767px) {
          padding: {{ block.settings.block_padding_mobile }};
        }
      }

      {%- if block.settings.direction_row -%}
        #block-{{ block.id }} .service-list-content {
          flex: 1;
        }
      {%- endif -%}

      #block-{{ block.id }} .service-item:hover {
        background: {{ block.settings.bg_color_hover }}
      }

      #block-{{ block.id }} .service-item-img {
        margin-bottom: {{ block.settings.image_space |  append: 'px' }};
        {%- if block.settings.icon_width != blank and block.settings.icon_width > 0 -%}
          display: flex;
          justify-content: center;
          align-items: center;
        {%- endif -%}
        width: {{ block.settings.icon_width |  append: 'px' }};
        height: {{ block.settings.icon_height |  append: 'px' }};
        border-radius: {{ block.settings.icon_rounded |  append: 'px' }};
        background: {{ block.settings.icon_background }};
        transition: 0.3s all ease;
      }

      #block-{{ block.id }} .service-item:hover .service-item-img {
        background: {{ block.settings.icon_background_hover }};
      }

      {%- if block.settings.icon_image_filter -%}
        #block-{{ block.id }} .service-item:hover .service-item-img img {
          filter: brightness(0) invert(1);
        }
      {%- endif -%}
      

      {%- if block.settings.enable_step -%}
        #block-{{ block.id }} .main-image {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 20px;
        line-height: 28px;
        font-weight: 500;
        color: #999;
      }
      {%- endif -%}


      #block-{{ block.id }} .service-list-title {
        font-size: {{ block.settings.title_font_size |  append: 'px' }};
        line-height: {{ block.settings.title_line_height |  append: 'px' }};
        font-weight: {{ block.settings.title_font_weight }};
        text-transform: {{ block.settings.title_text_transform }};
        color: {{ block.settings.title_color }};
        margin-bottom: {{ block.settings.title_space |  append: 'px' }};
      }
      #block-{{ block.id }} .service-list-description {
        font-size: {{ block.settings.des_font_size |  append: 'px' }};
        line-height: {{ block.settings.des_line_height |  append: 'px' }};
        font-weight: {{ block.settings.des_font_weight }};
        color: {{ block.settings.des_color }};
        margin-bottom: {{ block.settings.des_space |  append: 'px' }};
      }


