<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .main-page-title {
    margin-bottom: 10px;
  }

  .title-page-content {
    color: #000;
    font-size: 2rem;
    text-align: center;
  }

  
    .section-{{ section.id }}-padding {
      margin: {{ section.settings.margin_desktop }};
    }
    .breadcrumb__list {
      padding: 0;
    }
    .breadcrumb__item svg {
      margin: 0 10px;
    }
    .breadcrumb__item,
    .breadcrumb__link ,
    .breadcrumb__item+.breadcrumb__item:before {
      color: {{ section.settings.color_breadcrumb }};
    }
    .section-{{ section.id }}-padding .breadcrumb-wp {
      padding-top: {{ section.settings.padding_top | times: 1 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 1 | round: 0 }}px;
      padding-left: 15px;
      padding-right: 15px;
      {% if section.settings.bg_img != blank %}
        background-image: url({{ section.settings.bg_img | image_url: width: 2000 }});
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
      {% endif %}
      min-height: {{ section.settings.height }}px;
      border-radius: 0;
      text-align: center;
      {% unless section.settings.bg_img != blank %}
        {% if section.settings.background_gradient != blank  %} 
          background-image: {{ section.settings.background_gradient }};
          {% endif %}
      {% endunless %}
      
      {% if section.settings.background_color != blank %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
    }
    @media (min-width: 768px) {
      .section-{{ section.id }}-padding .breadcrumb-wp {
        border-radius: {{ section.settings.breadcrumb_rounded |  append: 'px' }};
      }
    }
    .main-content-page {
      padding-bottom: 60px;
    }
    .breadcrumb-wp {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    @media (max-width: 1199px) {
      .section-{{ section.id }}-padding .breadcrumb-wp {
        min-height: {{ section.settings.height_tablet }}px;
      }
      .section-{{ section.id }}-padding {
      margin: {{ section.settings.margin_tablet }};
    }
    }
    @media (max-width: 999px) {
      .section-{{ section.id }}-padding {
        margin-bottom: 30px;
      }
    }
    @media (max-width: 767px) {
      .section-{{ section.id }}-padding .breadcrumb-wp {
        min-height: {{ section.settings.height_mobile }}px;
      }
    }
 

{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="{{ section.settings.setwidthout }}">
    <div class="breadcrumb-wp">
     
      

      {%- if section.settings.enable_title -%}
        <h1 style="color: {{ section.settings.color_title }}" class="main-page-title page-title h0">
        
        {% unless template contains 'article' %}
        {% if template contains 'page' %}
          {{ page.title | escape }}
        {% elsif template contains 'collection' %}
          {% if collection.title != blank %}
            {{ collection.title }}
          {% else %}
              Collection all
          {% endif %}
        {% else %}
        {{ page_title }}
        {% endif %}
        {% endunless %}

        
      </h1>
      {%- endif -%}

      {% render 'breadcrumb' %}
      
      
    </div>
  </div>
</div>

{% if page.content != blank %}
<div class="main-content-page">
  <div class="container">
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section section-page-title",
  "settings": [
    {
      "type": "select",
      "id": "setwidthout",
      "label": "Set Width",
      "default": "full",
      "options": [
        {
          "value": "container",
          "label": "Box"
        },
        {
          "value": "container-fluid",
          "label": "Container Fluid"
        },
        {
          "value": "full",
          "label": "Full"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_title",
      "label": "Show title",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 110,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 35
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 110,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 35
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height banner",
      "max": 800,
      "min": 10,
      "step": 10,
      "unit": " px",
      "default": 150
    },
    {
      "type": "range",
      "id": "height_tablet",
      "label": "Height banner tablet",
      "max": 800,
      "min": 10,
      "step": 10,
      "unit": " px",
      "default": 150
    },
    {
      "type": "range",
      "id": "height_mobile",
      "label": "Height banner mobile",
      "max": 800,
      "min": 10,
      "step": 10,
      "unit": " px",
      "default": 150
    },
    {
      "type": "text",
      "id": "margin_desktop",
      "label": "t:sections.all.margin_desktop.label",
      "info": "t:sections.all.margin_desktop.info"
    },
    {
      "type": "text",
      "id": "margin_tablet",
      "label": "t:sections.all.margin_tablet.label",
      "info": "t:sections.all.margin_tablet.info"
    },
    {
      "type": "text",
      "id": "margin_mobile",
      "label": "t:sections.all.margin_mobile.label",
      "info": "t:sections.all.margin_mobile.info"
    },
    
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
        "type": "color_background",
        "id": "background_gradient",
        "label": "Background gradient"
      },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#282828"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color Breadcrumb Title",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "color_breadcrumb",
      "label": "Color Breadcrumb",
      "default": "#fff"
    }, {
      "type": "number",
      "id": "breadcrumb_rounded",
      "label": "Breadcrumb rounded",
      "default": 0
    }
  ], 
  "presets": [
    {
      "name": "Breadcrumb"
    }
  ]
}
{% endschema %}
