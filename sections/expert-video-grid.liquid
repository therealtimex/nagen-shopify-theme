  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Chuyên gia"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Chuyên gia nói gì về chúng tôi"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
