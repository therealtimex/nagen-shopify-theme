    },
    {
      "type": "text",
      "id": "padding_tablet",
      "label": "Padding tablet",
      "default": "0 24px"
    },
    {
      "type": "text",
      "id": "padding_mobile",
      "label": "Padding mobile",
      "default": "0 20px"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Grid gap",
      "min": 8,
      "max": 40,
      "step": 2,
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "video_item",
      "name": "Video",
      "settings": [
        {
          "type": "video_url",
          "id": "video_url",
          "label": "YouTube or Vimeo URL",
          "accept": ["youtube", "vimeo"]
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "TS. BS Đoàn Quốc Anh"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Expert videos grid",
      "blocks": [
        {
          "type": "video_item"
        },
        {
          "type": "video_item"
        },
        {
          "type": "video_item"
        },
        {
          "type": "video_item"
        }
      ]
    }
  ]
}
