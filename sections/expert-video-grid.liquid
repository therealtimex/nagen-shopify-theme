      "id": "enable_carousel",
      "label": "Enable carousel (horizontal scroll)",
      "default": false
    },
    {
      "type": "range",
      "id": "carousel_item_width",
      "label": "Carousel item width",
      "min": 220,
      "max": 520,
      "step": 10,
      "default": 320
    },
    {
      "type": "number",
      "id": "content_width",
      "label": "Content width",
      "default": 1350
    },
    {
      "type": "text",
      "id": "margin_desktop",
      "label": "Margin desktop",
      "default": "60px 0 120px"
    },
    {
      "type": "text",
      "id": "margin_tablet",
      "label": "Margin tablet",
      "default": "50px 0 90px"
    },
    {
      "type": "text",
      "id": "margin_mobile",
      "label": "Margin mobile",
      "default": "40px 0 60px"
    },
    {
      "type": "text",
      "id": "padding_desktop",
      "label": "Padding desktop",
