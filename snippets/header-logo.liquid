{% if request.page_type == 'index' %}
    <h1 class="header__logo">
{% else %}
    <span class="header__logo">
{% endif %}
    <a href="{{ routes.root_url }}" class="header__logo-link">
    <span class="visually-hidden">{{ shop.name }}</span>

    {%- if template.name != 'index' and section.settings.logo2 != blank -%}
        {%- assign logo_alt = section.settings.logo2.alt | default: shop.name | escape -%}
        {{ section.settings.logo2 | image_url: width: section.settings.logo_width | image_tag:
        class: 'header__logo-image',
        alt: logo_alt
        }}

        {%- if section.settings.logo_second != blank -%}
            {{ section.settings.logo_second | image_url: width: section.settings.logo_width | image_tag:
            class: 'header__logo-image d-none',
            alt: logo_alt
            }}
        {%- endif -%}

        {%- else -%}
            {%- if section.settings.logo != blank -%}
        {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
        {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag:
        class: 'header__logo-image',
        alt: logo_alt
        }}

        {%- if section.settings.logo_second != blank -%}
            {{ section.settings.logo_second | image_url: width: section.settings.logo_width | image_tag:
            class: 'header__logo-image d-none',
            alt: logo_alt
            }}
        {%- endif -%}

        
    {%- else -%}
        <span class="h2">{{ shop.name }}</span>
    {%- endif -%}
    {%- endif -%}
    
    </a>
{% if request.page_type == 'index' %}
    </h1>
{% else %}
    </span>
{% endif %}